<Window x:Class="飛行遊戲.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="場景選擇" Height="230" Width="259" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,-10">
        <RadioButton x:Name="sky" Content="天空" HorizontalAlignment="Left" Margin="31,51,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="universe" Content="太空" HorizontalAlignment="Left" Margin="31,79,0,0" VerticalAlignment="Top"/>
        <Button x:Name="enter" Content="確定" HorizontalAlignment="Left" Margin="129,84,0,0" VerticalAlignment="Top" Width="102" Height="37" Click="Confirm"/>
        <Label Content="場景選擇：" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton x:Name="grass" Content="草地" HorizontalAlignment="Left" Margin="31,107,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="dessert" Content="荒漠" HorizontalAlignment="Left" Margin="31,135,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
